{
    "name": "ql_service_ts",
    "version": "0.0.0",
    "description": "",
    "author": "",
    "private": true,
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon dist/src/index.js",
        "pm2:start": "npm run build && pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 delete ecosystem.config.js",
        "pm2:start:dev": "npm run build && pm2 start ecosystem_dev.config.js",
        "pm2:stop:dev": "pm2 delete ecosystem_dev.config.js",
        "pm2:start:release": "npm run build && pm2 start ecosystem_re.config.js",
        "pm2:stop:release": "pm2 delete ecosystem_re.config.js",
        "pm2:setlog": "pm2 set pm2-logrotate:max_size 10M",
        "build": "rm -rf .parcel-cache dist && npm run build:ts && npm run build:vue && npm run build:react",
        "build:vue": "parcel build ./index_vue.html --public-url ./",
        "build:react": "parcel build ./index_react.html --public-url ./",
        "build:ts": "tsc",
        "watch:vue": "rm -rf .parcel-cache dist && parcel ./index_vue.html",
        "watch:react": "rm -rf .parcel-cache dist && parcel ./index_react.html",
        "watch:ts": "tsc -w",
        "test": "cross-env NODE_ENV=development mocha dist/test/index.test.js --bail --timeout 99999999",
        "coverage": "cross-env NODE_ENV=development nyc --reporter=html --reporter=text-summary npm run test",
        "clean:dist": "rm -rf ./dist",
        "db:push": "rm -rf dist/tools/migrations && tsc && cross-env NODE_ENV=development node dist/tools/db/db_push.js && npm run db:pull",
        "db:pull": "cross-env NODE_ENV=development node dist/tools/db/db_pull.js",
        "db:init": "cross-env NODE_ENV=development node dist/tools/db/db_init.js",
        "db:empty": "cross-env NODE_ENV=development node dist/tools/db/db_empty.js",
        "db:reset": "cross-env NODE_ENV=development node dist/tools/db/db_mk.js && npm run db:empty && npm run db:push && npm run db:pull && npm run db:init",
        "db:sync": "node dist/tools/db/db_sync.js",
        "format:all": "prettier --write .",
        "prepare": "husky install",
        "docker:build": "npm run build && docker build -t ql_service_ts .",
        "docker:run": "docker run --env-file .env/prod.env -p 80:80 ql_service_ts",
        "dockerCompose:run": "docker-compose up",
        "dockerCompose:build": "npm run build && docker-compose up --build"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "dependencies": {
        "@lsby/ts_type_check": "^0.0.10",
        "cookie-parser": "^1.4.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.0",
        "express": "^4.17.1",
        "kysely": "^0.17.1",
        "mysql": "^2.18.1",
        "mysql2": "^2.3.3",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "uuid": "^8.3.2",
        "vue": "^3.2.35"
    },
    "devDependencies": {
        "@parcel/transformer-vue": "^2.5.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.11",
        "@types/mocha": "^9.1.0",
        "@types/mysql": "^2.15.21",
        "@types/react": "^18.0.9",
        "@types/readline-sync": "^1.4.4",
        "@types/uuid": "^8.3.1",
        "husky": "^7.0.4",
        "knex": "^1.0.4",
        "mocha": "^9.2.2",
        "mysqldump": "^3.2.0",
        "nodemon": "^2.0.7",
        "nyc": "^15.1.0",
        "parcel": "^2.5.0",
        "prettier": "2.6.2",
        "readline-sync": "^1.4.10",
        "typescript": "^4.6.3"
    }
}
